<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="Doctor Management" style="-fx-font-size: 18; -fx-font-weight: bold;" />
      <Separator />
      <Label text="Add New Doctor:" />
      <VBox fx:id="inputSection" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="firstNameField" prefWidth="150.0" promptText="First Name" />
                  <TextField fx:id="lastNameField" prefWidth="150.0" promptText="Last Name" />
                  <TextField fx:id="emailField" prefWidth="150.0" promptText="Email" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="phoneField" prefWidth="150.0" promptText="Phone Number" />
                  <TextField fx:id="departmentField" prefWidth="150.0" promptText="Department" />
                  <TextField fx:id="specializationField" prefWidth="150.0" promptText="Specialization" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Add Doctor" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator />
      <Label text="Doctor List:" />
      <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by name, email, or specialization..." />
      <HBox fx:id="buttonBox" spacing="10.0">
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Refresh List" />
            <Button fx:id="editBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Edit Selected" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Delete Selected" />
         </children>
      </HBox>
      <TableView fx:id="doctorTable" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="firstNameCol" prefWidth="100.0" text="First Name" />
            <TableColumn fx:id="lastNameCol" prefWidth="100.0" text="Last Name" />
            <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
            <TableColumn fx:id="phoneCol" prefWidth="120.0" text="Phone" />
            <TableColumn fx:id="departmentCol" prefWidth="100.0" text="Department" />
            <TableColumn fx:id="specializationCol" prefWidth="120.0" text="Specialization" />
         </columns>
      </TableView>
   </children>
</VBox>
