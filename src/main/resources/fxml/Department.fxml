<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="Department Management" style="-fx-font-size: 18; -fx-font-weight: bold;" />
      <Separator />
      <Label text="Add New Department:" />
      <VBox fx:id="inputSection" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="nameField" prefWidth="200.0" promptText="Department Name" />
                  <TextField fx:id="descriptionField" prefWidth="300.0" promptText="Description" />
                  <Button fx:id="addBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Add Department" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator />
      <Label text="Department List:" />
      <TextField fx:id="searchField" prefWidth="300.0" promptText="Search by name..." />
      <HBox fx:id="buttonBox" spacing="10.0">
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Refresh List" />
            <Button fx:id="editBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Edit Selected" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Delete Selected" />
         </children>
      </HBox>
      <TableView fx:id="departmentTable" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="nameCol" prefWidth="150.0" text="Department Name" />
            <TableColumn fx:id="descriptionCol" prefWidth="300.0" text="Description" />
         </columns>
      </TableView>
   </children>
</VBox>
