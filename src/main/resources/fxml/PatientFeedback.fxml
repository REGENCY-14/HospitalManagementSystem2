<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="15.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="titleLabel" text="Patient Feedback Management" style="-fx-font-size: 18; -fx-font-weight: bold;" />
      <Separator />
      <Label text="Add New Feedback:" />
      <VBox fx:id="inputSection" spacing="10.0">
         <children>
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="patientCombo" prefWidth="200.0" promptText="Select Patient" />
                  <ComboBox fx:id="ratingCombo" prefWidth="100.0" promptText="Rating (1-5)" />
               </children>
            </HBox>
            <TextArea fx:id="commentsArea" prefHeight="80.0" prefWidth="600.0" promptText="Comments" wrapText="true" />
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="addBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Add Feedback" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Separator />
      <Label text="Feedback List:" />
      <HBox fx:id="buttonBox" spacing="10.0">
         <children>
            <Button fx:id="refreshBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Refresh List" />
            <Button fx:id="editBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Edit Selected" />
            <Button fx:id="deleteBtn" mnemonicParsing="false" style="-fx-font-size: 12; -fx-padding: 8;" text="Delete Selected" />
         </children>
      </HBox>
      <TableView fx:id="feedbackTable" prefHeight="400.0">
         <columns>
            <TableColumn fx:id="idCol" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="patientCol" prefWidth="150.0" text="Patient" />
            <TableColumn fx:id="ratingCol" prefWidth="80.0" text="Rating" />
            <TableColumn fx:id="commentsCol" prefWidth="400.0" text="Comments" />
            <TableColumn fx:id="dateCol" prefWidth="120.0" text="Date" />
         </columns>
      </TableView>
   </children>
</VBox>
